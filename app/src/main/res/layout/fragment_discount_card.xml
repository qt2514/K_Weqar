            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            />
        <RatingBar
            android:id="@+id/mappage_rating1"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewu1"
            android:clickable="false"
            android:focusable="false"
            android:layout_marginLeft="20dp"
        android:progressBackgroundTint="@color/coloryellow"
        android:progressTint="@color/coloryellow"
            android:layout_marginTop="3dp"
            android:secondaryProgressTint="@color/coloryellow"
            android:max="5"
            android:rating="4"
            android:scaleX=".5"
            android:scaleY=".5"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/imageView11"
            android:layout_alignTop="@+id/roundedImageView1"
            android:layout_marginEnd="18dp"
            android:background="@drawable/but_unselected"
            android:text="Follow"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/button1"
            android:layout_alignTop="@+id/textViewu1"
            android:src="@drawable/ic_location_on_black_24dp" />
    </RelativeLayout>




