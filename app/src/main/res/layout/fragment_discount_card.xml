<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageView1"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/rounded_two"
        android:layout_marginTop="20dp"
        app:riv_border_color="@color/colorHints"
        app:riv_border_width="2dip"
        app:riv_corner_radius="13dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="11dp"
        android:src="@drawable/vgv" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginTop="12dp"
        android:src="@drawable/rounded"
        app:riv_border_color="@color/colorPrimary"
        app:riv_border_width="2dip"
        app:riv_oval="true" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/roundedImageView"
        android:text="75% Discount in KFC"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:layout_marginTop="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
android:layout_marginTop="2dp"
        android:layout_below="@+id/textView2"
        android:text="Percide January 7 2018 Dont miss it"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
       />
    <RatingBar
        android:id="@+id/mappage_rating"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewu"
        android:clickable="false"
        android:focusable="false"    android:layout_marginLeft="20dp"
        android:progressBackgroundTint="@color/coloryellow"

        android:layout_marginTop="3dp"
        android:progressTint="@color/coloryellow"

        android:max="5"
        android:rating="5"
        android:scaleX=".5"
        android:scaleY=".5"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/imageView1"
        android:layout_alignTop="@+id/roundedImageView"
        android:layout_marginEnd="18dp"
        android:background="@drawable/but_selected"
        android:text="Unfollow"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button"
        android:layout_alignTop="@+id/textViewu"
        android:src="@drawable/ic_location_on_black_24dp" />
</RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
